function pre {
	get_ntpdate
	check_if_partitioned
	remove_all_partitions
	create_one_partition ext2
	mount_partition "-t ext2"
}

function post {
	umount_partition
}

function download_and_install {
#	/usr/bin/tar -Jxf /mnt/voyage-mubox-current.tar.xz -C $ROOTFS_DIR
	curl http://mirror.voyage.hk/download/voyage-mubox/voyage-mubox-current.tar.xz | /usr/bin/tar -Jx -C $ROOTFS_DIR
}

pre
download_and_install
post

